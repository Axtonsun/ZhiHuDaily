<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.axtonsun.zhihudaily">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 网络连接           允许图片缓存到SD Card中            网络状况检查 -->

    <application
        android:name=".AppContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".View.Activity.StartActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.Activity.MainActivity"/>
        <activity android:name=".View.Activity.StoriesDetailActivity"/>

        <activity android:name=".View.Activity.FavouriteActivity"/>

        <activity android:name=".View.Activity.StoryActivity"/>

        <activity android:name=".View.Activity.StoryHotActivity"/>

        <activity android:name=".View.Activity.AboutViewActivity"/>

    </application>
</manifest>